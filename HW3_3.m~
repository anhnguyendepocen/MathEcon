clear; 

syms Q;

P = 12.5*exp(-.005*Q); % Price
TR =  (12.5*exp(-.005*Q))*Q; % Total Revenue

disp('Total Revenue');
pretty(TR);

TR1 = diff(TR,Q);

disp('TR first derivative -> Q');
pretty(TR1);


% start of solving the three equations 
eqn1 = TR1 == 0;
Qstar = solve(eqn1);


